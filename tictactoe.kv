<TicTacToeGrid>:
    cols: 3

    GridEntry:
        coords: 0,0
        on_release: root.button_pressed(self)

    GridEntry:
        coords: 0,1
        on_release: root.button_pressed(self)

    GridEntry:
        coords: 0,2
        on_release: root.button_pressed(self)

    GridEntry:
        coords: 1,0
        on_release: root.button_pressed(self)

    GridEntry:
        coords: 1,1
        on_release: root.button_pressed(self)

    GridEntry:
        coords: 1,2
        on_release: root.button_pressed(self)

    GridEntry:
        coords: 2,0
        on_release: root.button_pressed(self)

    GridEntry:
        coords: 2,1
        on_release: root.button_pressed(self)

    GridEntry:
        coords: 2,2
        on_release: root.button_pressed(self)

<GridEntry>:
    font_size: self.height